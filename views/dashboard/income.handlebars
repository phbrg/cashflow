<main class="container-main">
    <div class="title">
        <h1>Seus ganhos</h1>
        <span><a href="/dashboard/registerincome">Registrar ganhos</a></span>
    </div>
        {{#if hasIncome}}

    <ul class='income-table'>
        {{#each income}}
        <li>
            <p class='type-table'>{{this.source}}</p>
            <p class='date-table'><i class="fa-regular fa-calendar"></i>{{this.createdAt}}</p>
            <p class='price-table'><span>R$</span>{{this.amount}}</p>
            <p><span>Descrição:</span> <br> {{this.description}}</p>
            <a href="/dashboard/editincome/{{this.id}}"><button>Editar ganhos</button></a>
        </li>
        {{/each}}
    </ul>


    {{else}}
    <p class='empty-table'>Você não tem ganhos registrados.</p>
    {{/if}}
    </ul>

</main>
