<section class="container-main">
    <div class="container-title">
        <h1>Olá user, seja bem vindo a suas despesas</h1>
        <h2>Seu saldo: R$ <span>dinheiro</span></h2>
        <span><a href="/dashboard/registergoal">Registrar despesa</a></span>
    </div>
    {{#if hasExpense}}
    <div class="title-expense">
        <h1>Suas <span>despesas</span>:</h1>
    </div>

    <div class="container-expense">
        <ul class='expense-table'>
        {{#each expense}}
        <li>
            <p class='type-table'>Categoria: {{this.category}} </p>
            <p class='date-table'><i class="fa-regular fa-calendar"></i>Data: {{this.createdAt}}</p>
            <p class='price-table'>Quantia: <span>R$</span>{{this.amount}}</p>
            <p><span>Descrição:</span> <br> {{this.description}}</p>
            <a href="/dashboard/editexpense/{{this.id}}"><button>Editar despesa</button></a>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <p class='empty-table'>Você não tem despesas registradas.</p>
    {{/if}}
    </div>

